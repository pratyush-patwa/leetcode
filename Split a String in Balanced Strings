class Solution {
    public int balancedStringSplit(String s) {
        int countR = 0;
        int countL = 0;
        int pair   = 0;
        for(int i =0; i<s.length(); i++){
            
            if(s.charAt(i) == 'R'){
                countR++;
            }
            else{
                countL++;
            }
            if(countR == countL){
                pair++;
                countR = 0;
                countL = 0;
            }
        }
    return pair;
    }
}
